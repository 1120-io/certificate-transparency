UNAME := $(shell uname)
ifeq ($(UNAME),FreeBSD)
EXTRA_LDFLAGS="-lexecinfo"
endif

all: Makefile
	$(MAKE)
	# Not good on OSX at the moment:
	#make check
	$(MAKE) install

Makefile: configure
	WARN_OVERRIDES="-Wno-unused-function"
	./configure --prefix=$(INSTALL_DIR) CXXFLAGS="$(WARN_OVERRIDES)" CFLAGS="$(WARN_OVERRIDES)" CPPFLAGS="-I$(INSTALL_DIR)/include" LDFLAGS="-L$(INSTALL_DIR)/lib $(EXTRA_LDFLAGS)"

configure: configure.ac
	autoreconf -vi
