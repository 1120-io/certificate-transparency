UNAME := $(shell uname)
ifeq ($(UNAME),Darwin)
EXTRA_CXXFLAGS="-DGTEST_USE_OWN_TR1_TUPLE=1"
endif
ifeq ($(UNAME),FreeBSD)
EXTRA_CXXFLAGS="-DGTEST_USE_OWN_TR1_TUPLE=1"
endif

all: Makefile
	$(MAKE)
#	$(MAKE) check
	$(MAKE) install

Makefile: configure
	./configure --prefix=$(INSTALL_DIR) CXXFLAGS="$(EXTRA_CXXFLAGS)"
	$(MAKE) clean

configure: configure.ac
	./autogen.sh
