{
  "id": "etcd-replication",
  "kind": "ReplicationController",
  "apiVersion": "v1beta1",
  "desiredState": {
    "replicas": 3,
    "replicaSelector": {"name": "etcd-node"},
    "podTemplate": {
      "desiredState": {
        "manifest": {
          "version": "v1beta1",
          "id": "etcd-controller",
          "containers": [{
            "name": "registry",
            "image": "google/docker-registry",
            "ports": [{
              "name": "registry",
              "containerPort": 5000,
              "hostPort": 5000
            }],
            "env": [{
              "name": "GCS_BUCKET",
              "value": "ctlog_images"
            }]
          }, {
            "name": "etcd",
            "image": "localhost:5000/alcutter/etcd:test",
            "ports": [{
              "name": "etcd-client",
              "containerPort": 4001,
              "hostPort": 4001
            }, {
              "name": "etcd-peer",
              "containerPort": 7001,
              "hostPort": 7001
            }],
            "env": [{
              "name": "DISCOVERY",
              "value": "@@DISCOVERY@@"
            }]
          }]
        }
      },
      "labels": {"name": "etcd-node"}
    }
  },
  "labels": {"name": "etcd-node"}
}

